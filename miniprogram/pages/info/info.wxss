@import "/style/scroll.wxss";
.main{
  padding: 0 40rpx;
}
.listBox{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1rpx solid var(--borB);
}
.nameBox{
  display: flex;
  align-items: center;
}
.pic{
  min-width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.name{
  font-weight: bold;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}
.deta{
  margin-top: 8rpx;
  color: #BFBFBF;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.time{
  color: #BFBFBF;
  font-size: 28rpx;
  text-align: right;
}