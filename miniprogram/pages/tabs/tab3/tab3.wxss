@import "/style/scroll.wxss";
.picBox{
  padding: 40rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pic{
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  background: #333;
  margin-right: 38rpx;
}
.name{
  color: #424242;
  font-weight: bold;
  font-size: 42rpx;
  overflow: hidden;
  white-space: nowrap;
  max-width: 290rpx;
  text-overflow: ellipsis;
}
.changeData{
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #BFBFBF;
}
.changeData image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 5rpx;
}

.detailsBox{
  padding: 40rpx;
  background: #F9F9F9;
}
.share button{
  padding: 0;
  margin: 0;
  line-height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background: #51CA4E;
  box-shadow:0px 4rpx 12rpx 0px rgba(81,202,78,0.45);
  border-radius:10rpx;
  color: #fff;
  font-weight: normal;
}
.share image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.popularity{
  width: 100%;
  height: 252rpx;
  padding: 40rpx;
  margin-top: 20rpx;
}
.pop{
  display: flex;
  align-items: center;
  height: 100%;
}
.pop>view{
  width: 100%;
  text-align: center;
  height: 100%;
}
.popLeft{
  border-right: 1rpx solid var(--borB);
}
.popC{
  color: #fff;
  font-size: 72rpx;
  font-weight: bold;
  margin: 10rpx 0;
}
.popP{
  color: #fff;
}
.datasBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: -10rpx;
  flex-wrap: wrap;
}
.datas{
  width: 320rpx;
  height: 320rpx;
  box-shadow:0px 0px 20rpx 0px rgba(0,0,0,0.08);
  border-radius:34rpx;
  border:1rpx solid rgba(151,151,151,0.29);
  background: #fff;
  margin-top: 30rpx;
  padding: 35rpx 0 25rpx 40rpx;
}
.dataName{
  display: flex;
  align-items: center;
}
.dataName image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
}
.counts{
  font-weight: bold;
  font-size: 72rpx;
  color: #D61313;
  margin-top: 8rpx;
}
.ratio{
  display: flex;
  align-items: center;
  margin-top: 11rpx;
}
.day{
  color: #BFBFBF;
  font-size: 32rpx;
}
.ratioImg{
  width: 32rpx;
  height: 32rpx;
  margin: 0 5rpx 0 20rpx;
}
.ratioCount{
  font-size: 32rpx;
}
.taskBox{
  width: 100%;
  background: #fff;
  border-radius: 34rpx;
  box-shadow:0px 0px 20rpx 0px rgba(0,0,0,0.08);
  margin-top: 30rpx;
  padding-bottom: 60rpx;
}
.taskBox::before,.task::before{
  content:"";
  display:table;  /*显示方式*/
  }
.task{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  margin-top: -30rpx;
}
.taskItem{
  width: 50%;
  text-align: center;
  font-size: 42rpx;
  margin-top: 54rpx;
  position: relative;
}
.taskItem image{
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto;
}
.infoRed{
  width:26rpx;
  height:26rpx;
  background:rgba(214,19,19,1);
  border:3rpx solid rgba(255,255,255,1);
  position: absolute;
  top: 13rpx;
  right: 130rpx;
  border-radius: 50%;
}