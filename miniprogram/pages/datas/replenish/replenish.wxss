@import "/style/scroll.wxss";
.box{
  position: relative;
  min-height: 100vh;
}
view{
  font-size: 36rpx;
}
.top{
  width: 100%;
  height: 222rpx;
}
.empty{
  width: 100%;
  height: 20rpx;
  background: var(--empty);
}
.title{
  padding: 40rpx;
  border-bottom:1rpx solid var(--borB);
}
.title view{
  border-left: 10rpx solid var(--borL);
  padding: 0 20rpx;
  font-size: 40rpx;
  color: #424242;
  font-weight: bold;
}
.listBox{
  padding:0 40rpx 0;
}
.item{
  padding: 30rpx 0;
  border-bottom:1rpx solid var(--borB);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.itemLeft{
  font-weight: bold;
  min-width: 180rpx;
}
.itemRight{
  min-width: 300rpx;
  text-align: right;
}
.itemLeft text{
  color: #d3160e;
  margin-left: 3rpx;
}
.pic{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  
}
.picW{
  color: var(--colorW);
}
.goRight{
  width: 32rpx;
  height: 35rpx;
  margin-left: 20rpx;
}
.phone{
  text-align: right;
}
.button{
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
}

.button view{
  width: 50%;
  line-height: 108rpx;
  text-align: center;
  font-weight: bold;
  font-size: 42rpx;
  background: #FFD8D8;
  color: #FF5959;
}
.button .next{
  background: #FF5959;
  color: #fff;
}
.inputP{
  color: #333;
}
.explain{
  border: none;
}
.textareaP{
  color: #424242;
}
.textarea{
  background: #F7F7F7;
  width: 100%;
  height: 268rpx;
  border-radius: 8rpx;
  padding: 10rpx;
}
.textBox{
  border-bottom: 1rpx solid var(--borB);
  padding-bottom: 30rpx;
}
.albumBox{
  margin-top: 30rpx;
}
.albumTitle{
  padding: 0 40rpx;
}
.album{
  display: flex;
  align-items: center;
  padding: 30rpx 32.5rpx 192rpx;
  flex-wrap: wrap;
}
.albumItem{
  width: 33.33333%;
  height: 220rpx;
  padding: 7.5rpx;
}
.albumItem2{
  background: #F7F7F7;
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add{
  width: 96rpx;
  height: 96rpx;
}
.urlAlbum{
  width: 100%;
  height: 100%;
  position: relative;
}
.urlAlbum image{
  width: 100%;
  height: 100%;
}
.urlAlbum view{
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  background: rgba(1,1,1,0.5);
  font-weight: bold;
}