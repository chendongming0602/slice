@import "/style/scroll.wxss";
.box{
  position: relative;
  min-height: 100vh;
}
view{
  font-size: 36rpx;
}
.top{
  width: 100%;
  height: 222rpx;
}
.empty{
  width: 100%;
  height: 20rpx;
  background: var(--empty);
}
.title{
  padding: 40rpx;
  border-bottom:1rpx solid var(--borB);
}
.title view{
  border-left: 10rpx solid var(--borL);
  padding: 0 20rpx;
  font-size: 40rpx;
  color: #424242;
  font-weight: bold;
}
.listBox{
  padding:40rpx 40rpx 226rpx;
}

.button{
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
}

.button view{
  width: 50%;
  line-height: 108rpx;
  text-align: center;
  font-weight: bold;
  font-size: 42rpx;
  background: #FFD8D8;
  color: #FF5959;
}
.button .next{
  background: #FF5959;
  color: #fff;
}
.selfBox{
  padding: 40rpx 40rpx 0;
}
.kithBox{
  padding: 60rpx 20rpx 0;
  width: 33.333%;
}
.self,.kith{
  width:100%;
  line-height:86rpx;
  background:#EDEDED;
  border-radius:6rpx;
  text-align: center;
  padding: 0 20rpx;
}
.kith{
  display: flex;
  justify-content: center;
  align-items: center;
}
.kith image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 5rpx;
  transition: .5s;
}
.itemBox{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.itemBox2{
  padding: 0 20rpx;
  width: 33.333%;
  margin-top: 40rpx;
}
.chid{
  transform: rotate(180deg);
}
.active{
  background: #FF5959;
  color: #fff;
}
.kithItemBox{padding-bottom: 126rpx;}