.lgBox{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 777;
  background: rgba(1,1,1,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.lgContent{
  width: 590rpx;
  height: 726rpx;
  background: #fff;
  border-radius: 14rpx;
  padding: 60rpx 32rpx 0;
  text-align: center;
}
.lgNot{
  font-size: 32rpx;
  font-weight: bold;
}
.lgPlease{
  font-size: 24rpx;
  color: #bfbfbf;
  margin-top: 16rpx;
}
.lgImg{
  width: 316rpx;
  height: 316rpx;
  margin: 40rpx auto;
}
.lgBtn{
  width:100%;
  line-height:80rpx;
  background:rgba(255,81,81,1);
  border-radius:10rpx;
  text-align: center;
  color: #fff;
  min-width: 100%;
  padding: 0;
  font-weight: 500;
}
.lgNoBtn{
  font-size: 24rpx;
  color: #bfbfbf;
  padding-bottom: 28rpx;
  margin-top: 28rpx;
}
