.lgBox{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 777;
  background: rgba(1,1,1,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.consume{
  padding: 75rpx 60rpx 60rpx;
  width: 650rpx;
  background: #fff;
  position: relative;
  border-radius: 12rpx;
}
.close{
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  top: 30rpx;
  right: 30rpx;
}
.hint{
  color: #FF5959;
  font-size: 48rpx;
  text-align: center;
  font-weight: bold;
}
.residue{
  font-size: 44rpx;
  color: #424242;
  margin-top: 42rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.residue view{
  font-size: 48rpx;
  color: #FF5959;
  margin: 0 10rpx 0 25rpx;
}
.residue image{
  width: 46rpx;
  height: 46rpx;
}
.acquire{
  font-size: 44rpx;
  color: #424242;
  margin:72rpx 0 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 0 20rpx;
}
.acquire text{
  color: #F40101;
  font-size: 48rpx;
  /* margin-left: 10rpx; */
}
.but{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 70rpx;
}
.but view{
  width:242rpx;
  line-height:98rpx;
  border-radius:10rpx;
  border:2rpx solid rgba(151,151,151,1);
  text-align: center;
  font-size: 42rpx;
  font-weight: bold;
}
.but .confirm{
  color: #fff;
  background: #FF5959;
  border: none;
}