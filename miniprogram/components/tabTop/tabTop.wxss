.tabTop{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 28rpx;
  box-shadow:0px 8rpx 8rpx 0px rgba(0,0,0,0.02);
  position: relative;
}
.scroll{
  position: absolute;
  width:80rpx;
  height:8rpx;
  background:rgba(255,89,89,1);
  border-radius:4rpx;
  bottom: 10rpx;
  left: 230rpx;
  transition: .5s;
}

.tabTopL,.tabTopR{
  color: #BFBFBF;
}
.tabTopL{
  margin-right: 40rpx;
}
.tabTopR{
  margin-left: 40rpx;
}
.activeScroll{
  color: #FF5959;
}
.activeScrollLeft{
  color: #FF5959;
  left: 438rpx;
}